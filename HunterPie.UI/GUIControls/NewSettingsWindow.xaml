                                            <GradientStop Color="#FFF5358C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </custom:FlatButton.BorderBrush>
                                </custom:FlatButton>
                                <custom:FlatButton Icon="{StaticResource ICON_GITHUB}"
                                           Cursor="Hand"
                                           Text="{strings:Settings STATIC_HUNTERPIE_ISSUES}"
                                           Height="27"
                                           ToolTip="{strings:Settings STATIC_HUNTERPIE_ISSUES_DESC}"
                                           Command="{Binding OpenLink, ElementName=SettingsCtrl}"
                                           CommandParameter="https://github.com/Haato3o/HunterPie/issues"
                                           Margin="0,5,0,0"
                                           VerticalAlignment="Top"
                                           BorderThickness="2"
                                           Padding="0,2"
                                           Background="#FF171717">
                                    <custom:FlatButton.BorderBrush>
                                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0.5">
                                            <GradientStop Color="#FFFF0202" Offset="0"/>
                                            <GradientStop Color="#FFF5358C" Offset="1"/>
                                        </LinearGradientBrush>
                                    </custom:FlatButton.BorderBrush>
                                </custom:FlatButton>
                            </StackPanel>

                        </GroupBox>
                        <GroupBox Header="Support" VerticalAlignment="Top" HorizontalAlignment="Left" Width="250" Margin="5,0,0,0">
                            <StackPanel Orientation="Vertical">
                                <custom:FlatButton Icon="{StaticResource ICON_PAYPAL}"
                                           Text="{strings:Settings STATIC_HUNTERPIE_PAYPAL}"
                                           Height="27"
                                           ToolTip="{strings:Settings STATIC_HUNTERPIE_PAYPAL_DESC}"
                                           Command="{Binding OpenLink, ElementName=SettingsCtrl}"
                                           CommandParameter="https://server.haato.dev/donate"
                                           Margin="0,5,0,0"
                                           VerticalAlignment="Top"
                                           BorderThickness="2"
                                           Padding="0,2"
                                           Background="#FF171717"
                                           Cursor="Hand">
                                    <custom:FlatButton.BorderBrush>
                                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0.5">
                                            <GradientStop Color="#FF0252FF" Offset="0"/>
                                            <GradientStop Color="#FF07E5FB" Offset="1"/>
                                        </LinearGradientBrush>
                                    </custom:FlatButton.BorderBrush>
                                </custom:FlatButton>
                                <custom:FlatButton Icon="{StaticResource ICON_PATREON}"
                                           Text="Patreon"
                                           Height="27"
                                           ToolTip="{strings:Settings STATIC_HUNTERPIE_PAYPAL_DESC}"
                                           Command="{Binding OpenLink, ElementName=SettingsCtrl}"
                                           CommandParameter="https://www.patreon.com/HunterPie"
                                           Margin="0,5,0,0"
                                           VerticalAlignment="Top"
                                           BorderThickness="2"
                                           Padding="0,2"
                                           Background="#FF171717"
                                           Cursor="Hand">
                                    <custom:FlatButton.BorderBrush>
                                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0.5">
                                            <GradientStop Color="#FFEB1900" Offset="0"/>
                                            <GradientStop Color="#FFFF9700" Offset="1"/>
                                        </LinearGradientBrush>
                                    </custom:FlatButton.BorderBrush>
                                </custom:FlatButton>
                            </StackPanel>
                        </GroupBox>
                        <GroupBox Header="Discord" VerticalAlignment="Top" HorizontalAlignment="Left" Width="250" Margin="5,0,0,0">
                            <StackPanel Orientation="Vertical">
                                <custom:FlatButton Icon="{StaticResource ICON_DISCORD}"
                                           Text="{strings:Settings STATIC_HUNTERPIE_DISCORD}"
                                           Height="27"
                                           ToolTip="{strings:Settings STATIC_HUNTERPIE_DISCORD_DESC}"
                                           Command="{Binding OpenLink, ElementName=SettingsCtrl}"
                                           CommandParameter="https://discord.gg/5pdDq4Q"
                                           Margin="0,5,0,0"
                                           VerticalAlignment="Top"
                                           BorderThickness="2"
                                           Padding="0,2"
                                           Background="#FF171717"
                                           Cursor="Hand">
                                    <custom:FlatButton.BorderBrush>
                                        <LinearGradientBrush EndPoint="1,1" StartPoint="0,0.5">
                                            <GradientStop Color="#FF667DCB" Offset="0"/>
                                            <GradientStop Color="#FF93A6E8" Offset="1"/>
                                        </LinearGradientBrush>
                                    </custom:FlatButton.BorderBrush>
                                </custom:FlatButton>
                            </StackPanel>
                        </GroupBox>
                    </WrapPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Canvas>
                        <Image Source="{StaticResource ICON_CONSOLE}" Width="15" Height="15" Canvas.Top="6" Canvas.Left="2"/>
                        <TextBlock Height="21" Width="181" Canvas.Left="20" FontWeight="Medium" Canvas.Top="2" Text="{strings:Settings STATIC_DEBUG_SETTINGS}" />
                    </Canvas>
                </TabItem.Header>
                <ScrollViewer>
                    <StackPanel>
                        <custom:Switcher x:Name="switchEnableDebugMessages" Text="{strings:Settings ENABLE_DEBUG_MESSAGES}" RestartVisibility="Visible"  Margin="10,0,10,5" ToolTip="{strings:Settings ENABLE_DEBUG_MESSAGES_DESC}"/>
                        <custom:Switcher x:Name="switchEnableUnknownStatuses" Text="{strings:Settings ENABLE_UNKNOWN_AILMENTS}" RestartVisibility="Visible"  Margin="10,0,10,5" ToolTip="{strings:Settings ENABLE_UNKNOWN_AILMENTS_DESC}"/>
                        <custom:Switcher x:Name="switchEnableLoadMonsterData" Text="{strings:Settings ENABLE_LOAD_CUSTOM_DATA}" RestartVisibility="Visible"  Margin="10,0,10,5" ToolTip="{strings:Settings ENABLE_LOAD_CUSTOM_DATA_DESC}"/>
                        <custom:Switcher x:Name="switchEnableSendLogsToDev" Text="{strings:Settings ENABLE_SEND_CRASH_TO_DEV}" RestartVisibility="Hidden"  Margin="10,0,10,5" ToolTip="{strings:Settings ENABLE_SEND_CRASH_TO_DEV_DESC}"/>
                        <TextBox Text="{Binding ElementName=SettingsCtrl, Path=DebugInformation, Mode=OneTime}" IsReadOnly="True" Margin="10,0,10,5" BorderThickness="1" />
                        <custom:FlatButton Icon="{StaticResource ICON_REMOVE}" Text="Garbage collect" Command="{Binding ElementName=SettingsCtrl, Path=GarbageCollectCommand}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <!--#endregion App settings -->

            <TabItem x:Name="PluginsGrouping" IsEnabled="False" IsHitTestVisible="False"
                     Visibility="{Binding ElementName=SettingsCtrl,
                                          Path=HasPlugins,
                                          Converter={converters:BooleanToVisibilityConverter FalseValue=Collapsed}, UpdateSourceTrigger=PropertyChanged}">
                <TabItem.Template>
                    <ControlTemplate>
                        <TextBlock Text="{strings:GetString CONSOLE_PLUGINS}" FontWeight="Medium" Background="Transparent" Foreground="#FFeeeeee" Margin="20, 2, 0, 0" />
                    </ControlTemplate>
                </TabItem.Template>
            </TabItem>
        </TabControl>
    </Grid>
</UserControl>
