<UserControl x:Class="HunterPie.GUIControls.NewSettingsWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:helper="clr-namespace:HunterPie.GUI.Helpers"
             xmlns:custom="clr-namespace:HunterPie.GUIControls.Custom_Controls"
             xmlns:System="clr-namespace:System;assembly=mscorlib"
             xmlns:strings="clr-namespace:HunterPie.Infrastructure.Strings"
             xmlns:converters="clr-namespace:HunterPie.UI.Infrastructure.Converters"
             x:Name="SettingsCtrl">
    <UserControl.Resources>
        <ResourceDictionary>
            <helper:StaticSecondsConverter x:Key="StaticSecondsConverter"/>
            <Style TargetType="{x:Type TabItem}">
                <Setter Property="Height" Value="30"/>
                <Setter Property="Width" Value="250"/>
                <Setter Property="Margin" Value="0,1,0,0"/>
                <Setter Property="Padding" Value="0"/>
                <Setter Property="Foreground" Value="#FF9C9C9C"/>
                <Setter Property="FontSize" Value="16"/>
                <Setter Property="Opacity" Value="0.8"/>
                <Setter Property="Template">
                    <Setter.Value>
                        <ControlTemplate TargetType="{x:Type TabItem}">
                            <Border x:Name="PART_Border" Margin="0,0,-5,0" BorderBrush="{StaticResource BUTTON_COMMONBUTTON_BORDER}" Background="#FF080808" CornerRadius="2,2,0,0">
                                <ContentPresenter ContentSource="Header" Cursor="Hand"/>
                            </Border>
                            <ControlTemplate.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)" To="whiteSmoke" Duration="0:0:0.2"/>
                                                <ThicknessAnimation Storyboard.TargetName="PART_Border" Storyboard.TargetProperty="BorderThickness" To="3,0,0,0" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Foreground).(SolidColorBrush.Color)" To="Gray" Duration="0:0:0.2"/>
                                                <ThicknessAnimation Storyboard.TargetName="PART_Border" Storyboard.TargetProperty="BorderThickness" To="0,0,0,0" Duration="0:0:0.15"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </ControlTemplate.Triggers>
                        </ControlTemplate>
                    </Setter.Value>
                </Setter>
            </Style>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <TabControl x:Name="TabContainer" Background="{x:Null}" BorderBrush="#FF0C0C0C" TabStripPlacement="Left" BorderThickness="4,0,0,0" Margin="0" SelectedItem="{Binding ElementName=SettingsCtrl, Path=SelectedTab}">
            <TabControl.Template>
                <ControlTemplate TargetType="TabControl">
                    <DockPanel>
                        <ScrollViewer DockPanel.Dock="Left" HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Visible" HorizontalAlignment="Left">
                            <TabPanel x:Name="HeaderPanel"
                              Panel.ZIndex ="1"
                              KeyboardNavigation.TabIndex="1"
                              Grid.Column="0"
                              Grid.Row="0"
                              Margin="2,2,2,0"
                              IsItemsHost="true"/>
                        </ScrollViewer>
                        <ContentPresenter DockPanel.Dock="Right" x:Name="PART_SelectedContentHost"
                                          HorizontalAlignment="Stretch"
                                          VerticalAlignment="Stretch"
                                          ContentSource="SelectedContent"/>
                    </DockPanel>
                </ControlTemplate>
            </TabControl.Template>

            <!--#region App settings -->
            <TabItem Background="Black">
                <TabItem.Header>
                    <Canvas Cursor="Hand">
                        <Image Source="{StaticResource LOGO_HunterPie}" Width="15" Canvas.Top="6" Canvas.Left="3"/>
                        <TextBlock Height="21" Width="181" Canvas.Left="20" FontWeight="Medium" Canvas.Top="2" Text="{strings:Settings STATIC_GENERAL_SETTINGS}" />
                    </Canvas>
                </TabItem.Header>
                <ScrollViewer>
                    <StackPanel>
                        <custom:Switcher x:Name="switchEnableAutoUpdate"
                                         Text="{strings:Settings ENABLE_AUTOUPDATE}"
                                         ToolTip="{strings:Settings ENABLE_AUTOUPDATE_DESC}" />
                        <custom:Switcher x:Name="switchEnableMinimizeToSystemTray"
                                         Text="{strings:Settings ENABLE_MINTOTRAY}"
                                         ToolTip="{strings:Settings ENABLE_MINTOTRAY_DESC}" />
                        <custom:Switcher x:Name="switchEnableStartMinimized"
                                         Text="{strings:Settings ENABLE_STARTMIN}"
                                         ToolTip="{strings:Settings ENABLE_STARTMIN_DESC}" />
                        <custom:Switcher x:Name="switchEnableAutoMinimize"
                                         Text="{strings:Settings ENABLE_MINAFTERGAMEOPEN}"
                                         ToolTip="{strings:Settings ENABLE_MINAFTERGAMEOPEN_DESC}" />
                        <custom:Switcher x:Name="switchEnableNative"
                                         Text="{strings:Settings ENABLE_NATIVE}"
                                         ToolTip="{strings:Settings ENABLE_NATIVE_DESC}" />
                        <custom:Switcher x:Name="switchNotifyHotDrink"
                                         Text="{strings:Settings NOTIFY_HOT_DRINK}"
                                         ToolTip="{strings:Settings NOTIFY_HOT_DRINK_DESC}" />
                        <custom:Switcher x:Name="switchEnableCloseWhenExit"
                                         Text="{strings:Settings ENABLE_AUTOCLOSE}"
                                         ToolTip="{strings:Settings ENABLE_AUTOCLOSE_DESC}"/>
                        <custom:ComboBox x:Name="branchesCombobox"
                                         Label="{strings:Settings STATIC_UPDATEBRANCH}"
                                         ToolTip="{strings:Settings STATIC_UPDATEBRANCH_DESC}">
                            <custom:ComboBox.Items>
                                <System:String>master</System:String>
                                <System:String>BETA</System:String>
                            </custom:ComboBox.Items>
                        </custom:ComboBox>
                        <custom:ComboBox x:Name="comboPluginUpdateProxy"
                                         Label="{strings:Settings PLUGIN_PROXY_MODE}"
                                         ToolTip="{strings:Settings PLUGIN_PROXY_MODE_DESC}" />
                        <custom:ComboBox x:Name="LanguageFilesCombobox"
                                         Label="{strings:Settings STATIC_LANGUAGEFILE}"
                                         ToolTip="{strings:Settings STATIC_LANGUAGEFILE_DESC}" />
                        <custom:ComboBox x:Name="ThemeFilesCombobox"
                                         Label="{strings:Settings STATIC_THEMEFILE}"
                                         ToolTip="{strings:Settings STATIC_THEMEFILE_DESC}">
                            <custom:ComboBox.Items>
                                <System:String>Default</System:String>
                            </custom:ComboBox.Items>
                        </custom:ComboBox>
                        <custom:FileSelect x:Name="GamePathFileSelect"
                                           ToolTip="{strings:Settings STATIC_GAMEPATH_DESC}"
                                           Label="{strings:Settings STATIC_GAMEPATH}"
                                           ButtonLabel="{strings:Settings STATIC_GAMEPATH_UNSELECTED}"
                                           FileSelectionFilter="Executable|MonsterHunterWorld.exe" />
                        <custom:TextInput x:Name="gameLaunchArgsTb" ToolTip="{strings:Settings STATIC_GAMEPATH_DESC}"
                                          Watermark="{strings:Settings STATIC_LAUNCHARGS_NOARGS}"
                                          Label="{strings:Settings STATIC_LAUNCHARGS}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Canvas>
                        <Image Source="{StaticResource ICON_DISCORD}" Width="15" Canvas.Top="8" Canvas.Left="3"/>
                        <TextBlock Height="21" Width="181" Canvas.Left="20" FontWeight="Medium" Canvas.Top="2" Text="{strings:Settings STATIC_DISCORD_SETTINGS}" />
                    </Canvas>
                </TabItem.Header>
                <ScrollViewer>
                    <StackPanel>
                        <custom:Switcher x:Name="switchEnableRichPresence"
                                         Text="{strings:Settings ENABLE_RPC}"
                                         ToolTip="{strings:Settings ENABLE_RPC_DESC}"/>
                        <custom:Switcher x:Name="switchShowMonsterHealth"
                                         Text="{strings:Settings ENABLE_RPC_HEALTH}"
                                         ToolTip="{strings:Settings ENABLE_RPC_HEALTH_DESC}" />
                        <custom:Switcher x:Name="switchLetPeopleJoinSession"
                                         Text="{strings:Settings ENABLE_PEOPLE_JOIN}"
                                         ToolTip="{strings:Settings ENABLE_PEOPLE_JOIN_DESC}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Canvas>
                        <TextBlock Height="21" Width="181" Canvas.Left="20" FontWeight="Medium" Canvas.Top="2" Text="{strings:Settings STATIC_OVERLAY_SETTINGS}" />
                    </Canvas>
                </TabItem.Header>
                <ScrollViewer>
                    <StackPanel>
                        <custom:Switcher Margin="10,0,10,5" x:Name="switchInitializeOverlay" Text="{strings:Settings ENABLE_INITIALIZE_OVERLAY}" ToolTip="{strings:Settings ENABLE_INITIALIZE_OVERLAY_DESC}" RestartVisibility="Visible"/>
                        <custom:Switcher x:Name="switchEnableOverlay"  Margin="10,0,10,5" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_OVERLAY}" ToolTip="{strings:Settings ENABLE_OVERLAY_DESC}" />
                        <custom:Switcher x:Name="switchHideWhenUnfocused" Margin="10,0,10,5" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_HIDE_WHEN_UNFOCUS}" ToolTip="{strings:Settings ENABLE_HIDE_WHEN_UNFOCUS}" />
                        <custom:Switcher x:Name="switchHardwareAcceleration" Margin="10,0,10,5" RestartVisibility="Visible" Text="{strings:Settings ENABLE_HARDWARE_ACCELERATION}" ToolTip="{strings:Settings ENABLE_HARDWARE_ACCELERATION_DESC}" />
                        <custom:Switcher x:Name="switchAliasing" Margin="10,0,10,5" RestartVisibility="Visible" Text="{strings:Settings ENABLE_ANTIALIASING}" ToolTip="{strings:Settings ENABLE_ANTIALIASING_DESC}" />
                        <custom:Switcher x:Name="switchForceDirectX11Fullscreen" Margin="10,0,10,5" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_OVERLAY_FORCE_DIRECTX11_FULLSCREEN}" ToolTip="{strings:Settings ENABLE_OVERLAY_FORCE_DIRECTX11_FULLSCREEN_DESC}" />
                        <custom:MinimalSlider x:Name="DesiredFrameRateSlider" Margin="10,0,10,5" Text="{strings:Settings STATIC_ANIMATION_FPS}" Foreground="WhiteSmoke" FontFamily="Segoe UI Light" MaxValue="60" MinValue="1" MinChange="1" Value="60" ToolTip="{strings:Settings STATIC_ANIMATION_FPS_DESC}"/>
                        <custom:MinimalSlider x:Name="DesiredScanPerSecond" Margin="10,0,10,5" Text="{strings:Settings STATIC_GAME_SCAN_DELAY}" Foreground="WhiteSmoke" FontFamily="Segoe UI Light" MaxValue="1000" MinValue="1" MinChange="1" Value="150" ToolTip="{strings:Settings STATIC_GAME_SCAN_DELAY_DESC}"/>
                        <custom:CHotKey x:Name="ToggleOverlayHotkey" Text="{strings:Settings STATIC_TOGGLE_OVERLAY}" Margin="10,0,10,5" ToolTip="{strings:Settings STATIC_TOGGLE_OVERLAY_DESC}"/>
                        <custom:CHotKey x:Name="ToggleDesignHotkey" Text="{strings:Settings STATIC_TOGGLE_DESIGN}" Margin="10,0,10,5" ToolTip="{strings:Settings STATIC_TOGGLE_DESIGN_DESC}"/>
                        <custom:PositionControl x:Name="OverlayPosition" Margin="10,0,10,5" Height="38" ToolTip="{strings:Settings STATIC_OVERLAY_POSITION_DESC}" />
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Canvas>
                        <Image Source="{StaticResource ICON_BUILD}" Width="19" Height="20" Canvas.Top="3" Canvas.Left="1"/>
                        <TextBlock Height="21" Width="181" Canvas.Left="20" FontWeight="Medium" Canvas.Top="2" Text="{strings:Settings STATIC_PLAYER_SETTINGS}" />
                    </Canvas>
                </TabItem.Header>
                <ScrollViewer>
                    <StackPanel>
                        <custom:Switcher Margin="10,0,10,5" x:Name="switchInitializePlayerWidget" Text="{strings:Settings ENABLE_INITIALIZE_PLAYER_WIDGET}" ToolTip="{strings:Settings ENABLE_INITIALIZE_PLAYER_WIDGET_DESC}" RestartVisibility="Visible"/>
                        <custom:Switcher Margin="10,0,10,5" x:Name="switchEnablePlayerWidget" Text="{strings:Settings ENABLE_PLAYER_WIDGET}" ToolTip="{strings:Settings ENABLE_PLAYER_WIDGET_DESC}" RestartVisibility="Collapsed"/>
                        <custom:Switcher Margin="10,0,10,5" x:Name="switchEnabledPlayerMinimalisticMode" Text="{strings:Settings ENABLE_PLAYER_WIDGET_MINIMALISTIC_MODE}" RestartVisibility="Visible">
                            <custom:Switcher.ToolTip>
                                <StackPanel Orientation="Vertical">
                                    <TextBlock TextWrapping="Wrap" Text="{strings:Settings ENABLE_PLAYER_WIDGET_MINIMALISTIC_MODE_DESC}" />
                                    <Image Source="pack://siteoforigin:,,,/HunterPie.Resources/UI/minimalistic_player_widget.png" />
                                </StackPanel>
                            </custom:Switcher.ToolTip>
                        </custom:Switcher>
                        <custom:Switcher Margin="10,0,10,5" x:Name="switchEnablePlayerStreamerMode" Text="{strings:Settings ENABLE_STREAMER_MODE}" ToolTip="{strings:Settings ENABLE_STREAMER_MODE_DESC}" RestartVisibility="Visible"/>
                        <custom:TextInput x:Name="PlayerNameTextFormat" Label="{strings:Settings STATIC_PLAYER_NAME_STRING_FORMAT}" ToolTip="{strings:Settings STATIC_PLAYER_NAME_STRING_FORMAT_DESC}" />
                        <custom:Switcher Margin="10,0,10,5" x:Name="switchEnableHideInVillages" Text="{strings:Settings ENABLE_PLAYER_HIDE_IN_VILLAGES}" ToolTip="{strings:Settings ENABLE_PLAYER_HIDE_IN_VILLAGES_DESC}"  RestartVisibility="Collapsed"/>
                        <custom:MinimalSlider x:Name="PlayerComponentOpacity" Text="{strings:Settings STATIC_OPACITY}" MinChange="0.01" MinValue="0" MaxValue="1" ValueText="{Binding Value, ElementName=DamageComponentOpacity, StringFormat=\{0:P\}}" Foreground="WhiteSmoke" FontFamily="Segoe UI Light" Margin="10,0,10,5"/>
                        <custom:PositionControl Margin="10,0,10,5" Height="38" x:Name="PlayerWidgetPosition" ToolTip="{strings:Settings STATIC_PLAYER_POSITION_DESC}"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <TabItem>
                <TabItem.Header>
                    <Canvas>
                        <Image Source="{StaticResource ICON_MONSTERBAR}" Width="19" Height="20" Canvas.Top="3" Canvas.Left="1"/>
                        <TextBlock Height="21" Width="181" Canvas.Left="20" FontWeight="Medium" Canvas.Top="2" Text="{strings:Settings STATIC_MONSTERS_SETTINGS}" />
                    </Canvas>
                </TabItem.Header>
                <ScrollViewer>
                    <StackPanel>
                        <custom:Switcher Margin="10,0,10,5" x:Name="switchInitializeMonsterWidget" Text="{strings:Settings ENABLE_INITIALIZE_MONSTER_WIDGET}" ToolTip="{strings:Settings ENABLE_INITIALIZE_MONSTER_WIDGET_DESC}" RestartVisibility="Visible"/>
                        <custom:Switcher x:Name="switchEnableMonsterComponent" Margin="10,0,10,5" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_WIDGET}" ToolTip="{strings:Settings ENABLE_MONSTER_WIDGET_DESC}" />
                        <custom:Switcher x:Name="switchEnableMonsterStreamerMode" Text="{strings:Settings ENABLE_STREAMER_MODE}" ToolTip="{strings:Settings ENABLE_STREAMER_MODE_DESC}" Margin="10,0,10,5" RestartVisibility="Visible"/>
                        <custom:Switcher x:Name="switchEnableMonsterAction" Text="{strings:Settings ENABLE_MONSTER_ACTION}" ToolTip="{strings:Settings ENABLE_MONSTER_ACTION_DESC}" Margin="10,0,10,5" RestartVisibility="Collapsed"/>
                        <custom:Switcher x:Name="switchEnableOwOfy" Text="{strings:Settings ENABLE_OWOFY_MONSTER_NAMES}" ToolTip="{strings:Settings ENABLE_OWOFY_MONSTER_NAMES_DESC}" Margin="10,0,10,5" RestartVisibility="Collapsed"/>
                        <custom:TextInput x:Name="HealthTextFormat" Label="{strings:Settings STATIC_MONSTER_HEALTH_STRING_FORMAT}" ToolTip="{strings:Settings STATIC_MONSTER_HEALTH_STRING_FORMAT_DESC}" />
                        <custom:ComboBox x:Name="MonsterShowModeSelection" ToolTip="{strings:Settings STATIC_MONSTER_BAR_MODE_DESC}" Label="{strings:Settings STATIC_MONSTER_BAR_MODE}" />
                        <custom:CHotKey x:Name="ToggleMonsterBarModeHotKey" Text="{strings:Settings STATIC_MONSTER_BAR_MODE_HOTKEY}" ToolTip="{strings:Settings STATIC_MONSTER_BAR_MODE_HOTKEY}" Margin="10,0,10,5"/>
                        <StackPanel Visibility="Collapsed" Orientation="Horizontal" Height="28" ToolTip="{strings:Settings STATIC_MONSTER_BAR_DOCK_DESC}" Margin="10,0,10,5">
                            <TextBlock Text="{strings:Settings STATIC_MONSTER_BAR_DOCK}" FontFamily="Segoe UI Light" Foreground="WhiteSmoke" Canvas.Top="3"/>
                            <ComboBox x:Name="MonsterBarDock" Style="{StaticResource ComboBoxFlatStyle}" IsReadOnly="True" Cursor="Hand" HorizontalAlignment="Center" FontSize="14" Foreground="#FFF9F9F9" SelectedIndex="0" Canvas.Left="141" Canvas.Top="2" Width="234" />
                        </StackPanel>
                        <custom:Switcher x:Name="switchUseLockon" Text="{strings:Settings ENABLE_MONSTER_USE_LOCKON}"  Margin="10,0,10,5" ToolTip="{strings:Settings ENABLE_MONSTER_USE_LOCKON_DESC}" RestartVisibility="Collapsed"/>
                        <custom:Switcher x:Name="switchEnableMonsterWeakness" Margin="10,0,10,5" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_WEAKNESS}" ToolTip="{strings:Settings ENABLE_MONSTER_WEAKNESS_DESC}" />

                        <custom:Switcher x:Name="switchEnableHealthHiding" Text="{strings:Settings ENABLE_HIDE_MONSTER_HEALTH}" ToolTip="{strings:Settings ENABLE_HIDE_MONSTER_HEALTH_DESC}" Margin="10,0,10,5" RestartVisibility="Collapsed"/>
                        <custom:MinimalSlider x:Name="MaxNumberOfPartsAtOnce" MaxValue="16" MinValue="1" MinChange="1" Value="8" Text="{strings:Settings STATIC_MONSTER_MAX_PARTS}" FontFamily="Segoe UI Light" Foreground="WhiteSmoke" ToolTip="{strings:Settings STATIC_MONSTER_MAX_PARTS_DESC}" Margin="10,0,10,5"/>
                        <custom:MinimalSlider x:Name="MaxColumnsOfParts" MaxValue="4" MinValue="1" MinChange="1" Value="1" Text="{strings:Settings STATIC_MONSTER_MAX_COLUMNS}" FontFamily="Segoe UI Light" Foreground="WhiteSmoke" ToolTip="{strings:Settings STATIC_MONSTER_MAX_COLUMNS_DESC}" Margin="10,0,10,5"/>
                        <custom:MinimalSlider x:Name="HideSeconds" MaxValue="300" MinValue="1" MinChange="12" Value="1" Text="{strings:Settings STATIC_MONSTER_PART_DELAY}" FontFamily="Segoe UI Light" Foreground="WhiteSmoke" ToolTip="{strings:Settings STATIC_MONSTER_PART_DELAY_DESC}" Margin="10,0,10,5"/>
                        <custom:MinimalSlider x:Name="MonsterComponentOpacity" Text="{strings:Settings STATIC_OPACITY}" MinChange="0.01" MinValue="0" MaxValue="1" ValueText="{Binding Value, ElementName=MonsterComponentOpacity, StringFormat=\{0:P\}}" Foreground="WhiteSmoke" FontFamily="Segoe UI Light" Margin="10,0,10,5"/>
                        <custom:PositionControl x:Name="MonstersPosition" Margin="10,0,10,5" Height="38" ToolTip="{strings:Settings STATIC_MONSTER_POSITION_DESC}"/>
                        <TabControl Background="{x:Null}" BorderBrush="{x:Null}">
                            <TabItem Width="150">
                                <TabItem.Header>
                                    <TextBlock Text="{strings:Settings STATIC_MONSTER_PARTS_TAB}" Padding="5,0,0,0"/>
                                </TabItem.Header>
                                <StackPanel>
                                    <custom:TextInput x:Name="PartHealthTextFormat"
                                                      Label="{strings:Settings STATIC_MONSTER_PART_HEALTH_STRING_FORMAT}"
                                                      ToolTip="{strings:Settings STATIC_MONSTER_PART_HEALTH_STRING_FORMAT_DESC}" />
                                    <custom:Switcher x:Name="switchEnableHideUnactiveParts" Margin="10,0,10,5" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_HIDE_INACTIVE_PARTS}" ToolTip="{strings:Settings ENABLE_HIDE_INACTIVE_PARTS_DESC}" />
                                    <custom:Switcher x:Name="switchSortParts" Text="{strings:Settings ENABLE_AUTO_SORT_PARTS}" ToolTip="{strings:Settings ENABLE_AUTO_SORT_PARTS_DESC}" Margin="10,0,10,5" RestartVisibility="Collapsed"/>
                                    <custom:Switcher x:Name="switchShowOnlyPartsThatCanBeBroken" Text="{strings:Settings ENABLE_SHOW_BROKEN_PARTS}" ToolTip="{strings:Settings ENABLE_SHOW_BROKEN_PARTS_DESC}" Margin="10,0,10,5" RestartVisibility="Collapsed"/>
                                    <custom:Switcher x:Name="switchShowOnlyPartsThatArentBroken" Text="{strings:Settings ENABLE_SHOW_UNBROKEN_PARTS}" ToolTip="{strings:Settings ENABLE_SHOW_UNBROKEN_PARTS_DESC}" Margin="10,0,10,5" RestartVisibility="Collapsed"/>
                                    <custom:Switcher x:Name="switchEnableRemovableParts" Margin="10,0,10,5" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_BREAKABLE_PARTS}" ToolTip="{strings:Settings ENABLE_BREAKABLE_PARTS_DESC}" />
                                    <custom:Switcher x:Name="switchEnableParts" Margin="10,0,10,5" MouseDown="SwitchEnableParts_MouseDown" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PARTS}" ToolTip="{strings:Settings ENABLE_MONSTER_PARTS_DESC}" />
                                    <ScrollViewer MaxHeight="350" HorizontalAlignment="Center">
                                        <StackPanel x:Name="PartsCustomizer" Height="0" IsEnabled="False" MinWidth="300">
                                            <custom:Switcher x:Name="EnablePartHead" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_HEAD}" />
                                            <custom:Switcher x:Name="EnablePartBody" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_BODY}" />
                                            <custom:Switcher x:Name="EnablePartArm" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_ARM}" />
                                            <custom:Switcher x:Name="EnablePartWing" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_WING}" />
                                            <custom:Switcher x:Name="EnablePartLeg" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_LEG}" />
                                            <custom:Switcher x:Name="EnablePartTail" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_TAIL}" />
                                            <custom:Switcher x:Name="EnablePartLimb" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_LIMB}" />
                                            <custom:Switcher x:Name="EnablePartAbdomen" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_ABDOMEN}" />
                                            <custom:Switcher x:Name="EnablePartChest" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_CHEST}" />
                                            <custom:Switcher x:Name="EnablePartRear" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_REAR}" />
                                            <custom:Switcher x:Name="EnablePartJaw" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_JAW}" />
                                            <custom:Switcher x:Name="EnablePartBack" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_BACK}" />
                                            <custom:Switcher x:Name="EnablePartFin" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_FIN}" />
                                            <custom:Switcher x:Name="EnablePartHorn" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_HORN}" />
                                            <custom:Switcher x:Name="EnablePartNeck" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_NECK}" />
                                            <custom:Switcher x:Name="EnablePartShell" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_SHELL}" />
                                            <custom:Switcher x:Name="EnablePartOrgan" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_ORGAN}" />
                                            <custom:Switcher x:Name="EnablePartMane" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_MANE}" />
                                            <custom:Switcher x:Name="EnablePartBone" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_BONE}" />
                                            <custom:Switcher x:Name="EnablePartMisc" RestartVisibility="Collapsed" Text="{strings:Settings ENABLE_MONSTER_PART_MISC}" />
                                            <StackPanel.Style>
                                                <Style TargetType="StackPanel">
                                                    <Style.Triggers>
                                                        <Trigger Property="IsEnabled" Value="True">
                                                            <Trigger.EnterActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard Storyboard.TargetProperty="Height">
                                                                        <DoubleAnimation To="630" Duration="0:0:0.2"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.EnterActions>
                                                            <Trigger.ExitActions>
                                                                <BeginStoryboard>
                                                                    <Storyboard Storyboard.TargetProperty="Height">
                                                                        <DoubleAnimation To="0" Duration="0:0:0.2"/>
                                                                    </Storyboard>
                                                                </BeginStoryboard>
                                                            </Trigger.ExitActions>
                                                        </Trigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </StackPanel.Style>
                                        </StackPanel>
                                    </ScrollViewer>
                                </StackPanel>
                            </TabItem>
                            <TabItem Width="150" Margin="5,0,0,0" >
                                <TabItem.Header>
                                    <TextBlock Text="{strings:Settings STATIC_MONSTER_AILMENTS_TAB}" Padding="5,0,0,0"/>
                                </TabItem.Header>
                                <StackPanel>
                                    <custom:TextInput
                                        x:Name="AilmentBuildUpTextFormat"
                                        Label="{strings:Settings STATIC_MONSTER_AILMENT_BUILDUP_STRING_FORMAT}"
                                        ToolTip="{strings:Settings STATIC_MONSTER_AILMENT_BUILDUP_STRING_FORMAT_DESC}"/>
                                    <custom:TextInput
                                        x:Name="AilmentTimerTextFormat"
                                        Label="{strings:Settings STATIC_MONSTER_AILMENT_TIMER_STRING_FORMAT}"
                                        ToolTip="{strings:Settings STATIC_MONSTER_AILMENT_TIMER_STRING_FORMAT_DESC}"/>
                                    <custom:Switcher x:Name="switchEnableHideUnactiveAilments" Text="{strings:Settings ENABLE_HIDE_INACTIVE_AILMENTS}" ToolTip="{strings:Settings ENABLE_HIDE_INACTIVE_AILMENTS_DESC}" Margin="10,0,10,5" RestartVisibility="Collapsed"/>
